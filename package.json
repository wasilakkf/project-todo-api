{
  "name": "project-todo-api",
  "version": "1.0.0",
  "description": "Simple project of an REST API for a To-Do application",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "v18"
  },
  "scripts": {
    "lint": "eslint",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev": "pnpm run \"/dev:/\"",
    "prepare": "husky",
    "run-db-migrations": "db-migrate up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wasilakkf/project-todo-api.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "eslint": "^9.1.1",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  },
  "dependencies": {
    "db-migrate": "^0.11.14",
    "db-migrate-mysql": "^2.3.2",
    "express": "^4.19.2",
    "mysql2": "^3.9.7"
  }
}
